{
	"compilerOptions": {
		"target": "es2016",
		"lib": ["ES2016", "ES2021"],
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"include": ["./src"],
	"exclude": ["./node_modules"]
}
